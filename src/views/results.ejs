<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs' , {title: 'Tu búsqueda' }) %>

  <body class="productos">
    <%- include('partials/header.ejs') %>
      <!-- comienza header  --->


      <!-- product section starts  -->

      <section class="produc_page" id="produc_page">
        <h1 class="heading">resultado para <span>
            <%= search %>
          </span></h1>
        <% if (result.length> 0) { %>
          <% result.forEach(product=> { %>

            <div class="box-container">
              <div class="box">
                <span class="discount">-
                  <%= product.discount %>%
                </span>
                <div class="icons">
                  <a href="/products/detail/<%- product.id%>" class=" fas fa-eye"></a>
                </div>
                <img src="/img/imgProductos/<%- product.image%>" alt="">
                <h3>
                  <%- product.name %>
                </h3>
                <div class="info_pro">
                  <p class="info_p">
                    <%- product.description %>
                  </p>
                </div>
                <div class="price"> $<%= toThousand(product.price) %> <span> $<%- toThousand(product.price -
                        product.price * product.discount /100) %> </span> </div>
                <div class="quantity">
                  <span>Unidad: </span>
                  <input type="number" min="1" max="1000" value="1">
                  <span></span>
                </div>
                <a href="vista/<%- product.id %>" class="btn">Agregar al carrito</a>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="col-12">
                    <h2 class="products-title" style="color: tomato;">No hay productos que coincidan
                      con esa
                      búsqueda</h2>
                  </div>
                  <% } %>

            </div>

      </section>
      <div class="btn_volver">
        <button class="btn_inicio"><a href="/">Volver</a></button>
      </div>

      <!----   Comieza footer     ----->
      <%- include('partials/footer.ejs') %>

        <script src="js/main.js"></script>

  </body>

</html>