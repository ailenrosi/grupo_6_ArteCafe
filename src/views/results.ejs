<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs' , {title: 'Tu búsqueda' }) %>

  <body class="productos">
    <%- include('partials/header.ejs') %>
      <!-- comienza header  --->


      <!-- product section  -->
      <h1 class="heading_p" style="font-size: 2.3rem; margin-top: 8.6rem;text-align: center;">Productos<span>
          <%= search %>
        </span></h1>

      <section class="produc_page" id="produc_page">

        <% if (result.length> 0) { %>
          <% result.forEach(product=> { %>
            <div class="box-container">
              <div class="box">
                <span class="discount">-
                  <%= product.discount %>%
                </span>
                <div class="icons">
                  <a href="/products/productsDetail/<%- product.id%>" class="fas fa-eye"></a>
                </div>
                <img src="/img/imgProductos/<%- product.image%>" alt="">
                <h3>
                  <%- product.name %>
                </h3>
                <div class="info_pro">
                  <p class="info_p">
                    <%- product.description %>
                  </p>
                </div>
                <div class="price"> $<%= toThousand(product.price) %> <span> $<%- toThousand(product.price -
                        product.price * product.discount /100) %> </span> </div>
                <div class="quantity">
                  <label for="cantidad">Cantidad</label>
                  <div class="counter">
                    <button type="button" class="btn-subtract" onclick="subtract();">
                      -
                    </button>

                    <div id="count" style="padding-top: 1.5rem;">1</div>

                    <button type="button" id="btn-add" onclick="add();">
                      +
                    </button>
                  </div>
                </div>
                <a href="/products/productsDetail/<%- product.id%>" class="btn">Agregar al carrito</a>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="col-12">
                    <h2 class="products-title" style="color: tomato;">No hay productos que coincidan
                      con esa
                      búsqueda</h2>
                  </div>
                  <% } %>

            </div>

      </section>
      <div class="btn_volver">
        <button class="btn_inicio"><a href="/">Volver</a></button>
      </div>

      <!----   Comieza footer     ----->
      <%- include('partials/footer.ejs') %>

        <script src="js/productDetail.js"></script>

  </body>

</html>