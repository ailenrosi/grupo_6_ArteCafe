<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs' , {title: 'Productos' }) %>

  <body class="productos">
    <!-- comienza header  --->
    <%- include('partials/header.ejs') %>
    <h1 class="heading_p" style="font-size: 2.3rem; margin-top: 8.6rem;text-align: center;">Productos<span> destacados</span></h1>
      <!-- product section starts  -->
      <% products.forEach(product=> { %>
        <section class="produc_page" id="produc_page">
          <div class="box-container">
            <div class="box">
              <span class="discount">
               - <%= product.discount %> %
              </span>
              <div class="icons">
                <a href="/products/productsDetail/<%- product.id%>" class="fas fa-eye"></a>
              </div>
              <img style="max-height: 250px;
              min-width: 250px;" src="/img/imgProductos/<%- product.image%>" alt="">
              <h3>
                <%- product.name %>
              </h3>
              <div class="info_pro">
                <p class="info_p">
                  <%- product.description %>
                </p>
              </div>
              <div class="price"> $<%= toThousand(product.price) %> <span> $<%- toThousand(product.price - product.price
                      * product.discount /100) %> </span> </div>
              <div class="quantity">
                <span>Unidad: </span>
                <input type="number" min="1" max="1000" value="1">
                <span></span>
              </div>
              <a href="/products/productsDetail/<%- product.id%>" class="btn">Agregar al carrito</a>
            </div>
          </div>
        </section>
        <% }) %>
          <div class="btn_volver">
            <button class="btn_inicio"><a href="/">Volver</a></button>
          </div>

          <!----   Comieza footer     ----->
          <%- include('partials/footer.ejs') %>

            <script src="js/main.js"></script>



  </body>

</html>