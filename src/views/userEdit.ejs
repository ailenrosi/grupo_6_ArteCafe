<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs') %>

   <main class="profileEdit">
        <h2>Editar cuenta</h2> 
        <form action="" method="POST" enctype="multipart/form-data"> 
            <div class="box-forms">
                <input type="text" name="name" placeholder="Nombre"
                value="<%= locals.old && old.name %>"/>
            </div>

            <div class="box-forms">
                <input type="email" name="email" id="email" placeholder="email"
                value="<%= locals.old && old.email %>"/>
            </div>

            <div class="box-forms">
                <input type="pass" name="pass" id="pass" placeholder="Nueva contraseÃ±a"
                value="<%= locals.old && old.pass %>"/>
            </div>

            <div class="box-forms">
                <label class="img-perfil" for="imgUser">Imagen De Perfil</label>
                <input class="img-input" type="file" name="imgUser" id="imgUser"
                value="<%= locals.old && old.imgUser %>"/>
            </div>

            <div class="box-buttons">
                <button type="submit"><a href="profile">Editar</a></button>
                <button type="submit"><a href="profile">Cancelar</a></button>
            </div>

        </form>
    </main>
            <form id="delete-user" action="/user/userDelete/<%= user.id%>?_method=DELETE" method="POST">
                <button type="submit" id="formDel" class="btn">Eliminar Cuenta</button>
            </form>
            


        <%- include('partials/wsp.ejs') %>
    </body>
    <script src="/js/profile_edit.js"></script>
    <script src="/js/register"></script>
    <script src="/js/user.js"></script>
    <script src="/js/userDelete.js"></script>

</html>