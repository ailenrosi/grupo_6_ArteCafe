<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs') %>

    <body style="display: flex;">


        <a href="javascript: history.go(-1)" style="color: teal;font-size: 2rem; font-family: sans-serif;"> Volver</a>
        <div class="container-all">
            <div class="ctn-form">
                <h1 class="title">Iniciar Sesión</h1>
                <form action="/users" method="POST" class="form-ad">
                    <div class="user_form">
                        <input type="email" name="email" placeholder="Ingresá tu email">
                        <% if (locals.errors && errors.email) { %>
                            <small class="text-danger">
                                <%= errors.email.msg %>
                            </small>
                            <% } %>
                    </div>
                    <div class="form-ad-input">
                        <input type="password" name="pass" placeholder="Contraseña">
                        <% if (locals.errors && errors.pass) { %>
                            <small class="text-danger">
                                <%= errors.pass.msg %>
                            </small>
                            <% } %>
                    </div>
                    <div class="check">
                        <input type="checkbox" name="remember" id="check" style="margin-top: 1.8rem;">
                        <label for="check">Mantener sesión abierta</label>
                    </div>

                    <% if (locals.errorMsg ) { %>
                        <small class="text-danger">
                            <%= errorMsg %>
                        </small>
                        <% } %>
                            <input type="submit" value="Iniciar">


                            <span class="text-footer">¿Aún no te has regsitrado?
                                <a href="#">Registrate</a>
                            </span>
                            <span class="text-footer">olvidaste tu contraseña?
                                <a href="#">Recuperar</a>
                            </span>
            </div>
            </form>
            
            <div class="ctn-text">
                <div class="capa"></div>
                <a href="/" class="close_x">&times;</a>
                <h1 class="title-description">BIENVENID@ DE NUEVO</h1>
                <p class="text-description" style="text-align: center;">Inicia sesión para acceder a nuestras
                    promos.
                </p>
            </div>

        </div>


        <%- include('partials/wsp.ejs') %>
    </body>
    <script src="/js/user.js"></script>

</html>