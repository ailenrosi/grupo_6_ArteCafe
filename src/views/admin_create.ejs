<%- include('partials/head_admin.ejs')%>
<%- include('partials/header_admi.ejs')%>
<body>
  <main class="mainadmin">

    <div class="crearprod">
      <form class="crearProducto" method="POST" enctype="multipart/form-data">
        <p class="titleadmin">Editar Producto</p>

        <label for="name">Nombre del producto</label>
        <input type="text" name="name"/>

        <label for="description">Descripci√≥n</label>
        <input type="text" name="description"/>

        <label for="price">Precio</label>
        <input type="number" name="price"/>

        <label for="discount">Descuento</label>
        <input type="number" name="discount"/>

        <select class="form-select" id="specificSizeSelect" name="category">
          <option selected hidden value="">Categorias</option>
          <% categories.forEach(category => { %>
            <option value="<%- category.id%>" <%= locals.old && old.category == category.name ? "selected" : null %>><%- category.name %></option>
          <% }) %>
        </select>
        <% if(locals.errors && errors.category) {%>
          <small class="text-danger"><%= errors.category.msg %></small>
        <% } %>

        <div class="unaImagen">
          <label for="inputimage" class="adminedit">Imagen</label>
          <input type="file" class="form-control" id="inputimage" name="images" multiple />
        </div>

        <div class="botonCrear">
          <button type="submit" class="Crear">Crear</button>
        </div>

      </form>
    </div>

    <script src='/js/admin_create.js'></script>

  </main>
</body>
<%- include('partials/footer.ejs') %>