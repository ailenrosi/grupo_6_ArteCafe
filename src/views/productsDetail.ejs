<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs')%>

    <body>
        <%- include('partials/header.ejs') %>

            <main class="productDetail-container">

                <section class="productDetail">

                    <div class="images-container">

                        <div class="thumbnailImages">

                            <img src="/img/imgProductos/<%-product.image %>" alt="Imagen de producto">
                        </div><!-- Imagen pequeña del producto-->
                        
                        <div class="mainImage">
                            <img src="/img/imgProductos/<%= product.image[0]%>" alt="Imagen de producto"
                                id="expandedImg">
                        </div> <!-- Imagen agrandada del producto-->
                    </div>

                    <div class="productData-container">

                        <h3 class="productName">
                            <%= product.name %>
                        </h3>
                        
                        <div class="productPrice">$<%= product.price %>
                        </div>

                        <div class="productNumber">
                            <label for="cantidad">Cantidad</label>
                            <div class="counter">
                                <button type="button" class="btn-subtract" onclick="subtract();">
                                    -
                                </button>

                                <div id="count" style="padding-top: 1.5rem;">1</div>

                                <button type="button" id="btn-add" onclick="add();">
                                    +
                                </button>
                            </div>
                        </div>

                        <div class="btn_prod">
                            <a href="#" class="btn">Agregar al carrito</a>
                        </div>


                    </div>
                </section>
                <section class="productDescription">
                    <div class="description">
                        <h5>Descripción del producto</h5>
                        <p>
                            <%= product.description %>
                        </p>
                    </div>

                </section>
                <%- include('partials/comentarios.ejs') %>

            </main>
            <section class="slider_slider">
                <!-- /* Slider */ -->
                <%- include('partials/slider.ejs') %>
            </section>

            <%- include('partials/footer.ejs') %>


    </body>
    <!-- JavaScript -->
    <script src="/js/productDetail.js"></script>

</html>