<!DOCTYPE html>
<html lang="es">
<%- include('partials/head.ejs')%>

    <body class="prod_det">
        <%- include('partials/header.ejs') %>
       
            <main class="productDetail-container">
                <h1 style="padding-top: 9.5rem; text-align: center;">Estás viendo <span><%= product.name %></span> </h1>
                <section class="productDetail">

                    <div class="images-container">

                        <div class="thumbnailImages">

                            <img src="/img/imgProductos/<%-product.images[0].image %>" alt="Imagen de producto">
                        </div><!-- Imagen pequeña del producto-->

                        <div class="mainImage">
                            <img src="/img/imgProductos/<%= product.images[0].image %>" alt="Imagen de producto"
                                id="expandedImg">
                        </div> <!-- Imagen agrandada del producto-->
                    </div>

                    <div class="productData-container">

                        <h3 class="productName">
                            <%= product.name %>
                        </h3>
                        <span class="discount">-
                            <%= product.discount %>%
                        </span>
                        <div class="productPrice"> $<%= toThousand(product.price) %> <span> $<%-
                                        toThousand(product.price - product.price * product.discount /100) %> </span>
                        </div>
                        <div class="productNumber">
                            <label for="cantidad">Cantidad</label>
                            <div class="counter">
                                <button type="button" class="btn-subtract" onclick="subtract();">
                                    -
                                </button>

                                <div id="count" style="padding-top: 0.5rem;
                                margin: .5rem;">1</div>

                                <button type="button" id="btn-add" onclick="add();">
                                    +
                                </button>
                            </div>
                        </div>

                        <div class="btn_prod">
                            <a href="#" class="btn">Agregar al carrito</a>
                        </div>


                    </div>
                </section>
                <section class="productDescription">
                    <div class="description">
                        <h5 style="color: teal;">Descripción del producto</h5>
                        <p>
                            <%= product.description %>
                        </p>
                    </div>

                </section>
                <%- include('partials/comentarios.ejs') %>

            </main>


            <%- include('partials/banner.ejs') %>

            <section class="slider_slider">
                <!-- /* Slider */ -->
                <%- include('partials/slider.ejs') %>
            </section>



            <%- include('partials/footer.ejs') %>


    </body>
    <!-- JavaScript -->
    <script src="/js/productDetail.js"></script>

</html>