<!DOCTYPE html>
<html lang="en">
<%- include('partials/head')%>
<body>
<%- include('partials/header')%>

    <main class="usersForm-container">
       
        <h3 class="userTitle">Tu perfil</h3>
        <form action="<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="form-ad" >
            <div class="form-ad-input">
                <input type="text" name="name" placeholder="Nombre" value="<%= locals.old ? old.name : user.name %>">
                <% if (locals.errors && errors.name) { %>
                    <small class="text-danger"><%= errors.name.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input type="text" name="last_name" placeholder="Apellido" value="<%= locals.old ? old.last_name : user.last_name %>">
                <% if (locals.errors && errors.last_name) { %>
                    <small class="text-danger"><%= errors.last_name.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input type="email" name="email" placeholder="Ingresá tu email" readonly value="<%= user.email %>">
            </div>
            <div class="form-ad-input">
                <input type="text" name="phone" placeholder="Ingresá tu teléfono" value="<%= user.phone ? user.phone : "" %>">
            </div>
            <div class="form-ad-input">
                <input type="text" name="street" placeholder="Calle" value="<%= user.addresses[0]?.street ? user.addresses[0].street : "" %>">
            </div>
            <div class="form-ad-input">
                <input type="number" name="number" placeholder="Número" value="<%= user.addresses[0]?.number ? user.addresses[0].number : "" %>">
            </div>
            <div class="form-ad-input">
                <input type="text" name="postal_code" placeholder="Código postal" value="<%= user.addresses[0]?.postal_code ? user.addresses[0].postal_code : "" %>">
            </div>
            <div class="form-ad-input">
                <select name="province" id="">
                    <option value="">Provincia</option>
                </select>
            </div>
            <div class="form-ad-input">
                <select name="city" id="">
                    <option value="">Localidad</option>
                </select>
            </div>
            
          
            <button type="submit" class="btn btn-ad-primary">
                GUARDAR
            </button>
            
        </form>
    </main>
<%- include('partials/footer')%>

</body>
</html>